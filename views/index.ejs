<%- include('partials/header') -%>


<div class="container mt-5">
    <%- include('partials/message') -%>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Code</th>
                <th>Description</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach((product)=> { %>
                <tr>
                    <td><%= product.code %></td>
                    <td><%= product.description %></td>
                    <td><%= product.price %>$</td>
                    <td>
   
                       <form style="display: inline;" action="/delete/<%= product.id %>?_method=DELETE" method="POST">
                            <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                        <a style="display: inline;" href="/edit/<%= product.id %>">
                            <button style="cursor: pointer;" type="submit" class="btn btn-primary ml-2">Edit</button>
                        </a>
                    </td>
                </tr>
           <% }) %>
        </tbody>
        <thead>
            <tr>
                <th>Code</th>
                <th>Description</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
    </table>
</div>

<%- include('partials/footer') -%>